{
  "name": "wpp-monitor",
  "version": "1.0.0",
  "description": "Monitor múltiplos números de WhatsApp Business localmente",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:preload && tsc && vite build",
    "build:preload": "esbuild preload.ts --bundle --platform=node --outfile=preload.js --external:electron",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:win-nosign": "npm run build && electron-builder --win --x64 -c.win.forceCodeSigning=false",
    "build:win-portable": "npm run build && electron-builder --win portable --x64",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "whatsapp",
    "monitor",
    "electron",
    "baileys"
  ],
  "author": "WPP Monitor Team",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.7",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lucide-react": "^0.294.0",
    "pino": "^8.16.2",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.wppmonitor.app",
    "productName": "WPP Monitor",
    "directories": {
      "output": "dist-installer",
      "buildResources": "build"
    },
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "src/**/*",
      "node_modules/**/*",
      "data/**/*",
      "package.json"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signtoolOptions": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WPP Monitor",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Network"
    }
  }
}
